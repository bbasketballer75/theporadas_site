# Auto-Sync Configuration
# Copy this file to .env and customize the values for your setup

# === BASIC GIT CONFIGURATION ===
# Git remote name (default: origin)
GIT_REMOTE=origin

# Target branch for sync operations (default: main)
GIT_BRANCH=main

# Default commit message for auto-sync (default: "Auto-sync: Update files")
GIT_COMMIT_MESSAGE=Auto-sync: Update files

# === SYNC BEHAVIOR ===
# Run in dry-run mode (no actual commits/pushes) (default: false)
DRY_RUN=false

# Force push changes (use with caution) (default: false)
FORCE_PUSH=false

# Include untracked files in sync (default: true)
INCLUDE_UNTRACKED=true

# File patterns to exclude from sync (comma-separated)
EXCLUDE_PATTERNS=node_modules,.git,dist,build,.next,*.log

# === SCHEDULED SYNC CONFIGURATION ===
# Sync interval in minutes (default: 60)
SYNC_INTERVAL_MINUTES=60

# Schedule window - start hour (24-hour format, null for 24/7)
START_HOUR=

# Schedule window - end hour (24-hour format, null for 24/7)
END_HOUR=

# Only sync if there are uncommitted changes (default: false)
ONLY_IF_CHANGES=false

# Maximum number of sync runs before stopping (null for unlimited)
MAX_RUNS=

# Run in quiet mode (less verbose output) (default: false)
QUIET=false

# === FILE WATCHER CONFIGURATION ===
# Path to watch for changes (default: ".")
WATCH_PATH=.

# Debounce delay in milliseconds (default: 1000)
DEBOUNCE_MS=1000

# Maximum wait time before forcing sync (default: 5000)
MAX_WAIT_MS=5000

# File patterns to include (if specified, only these will be watched)
INCLUDE_PATTERNS=

# === SAFETY LIMITS ===
# Maximum commits per hour (default: 12)
MAX_COMMITS_PER_HOUR=12

# Maximum file size to sync in MB (default: 100)
MAX_FILE_SIZE_MB=100

# Require manual approval for large changes (default: true)
REQUIRE_APPROVAL_FOR_LARGE_CHANGES=true

# === AUTHENTICATION ===
# Git user name for commits (leave empty to use system default)
GIT_USER_NAME=

# Git user email for commits (leave empty to use system default)
GIT_USER_EMAIL=

# Personal access token for private repositories (if needed)
GIT_ACCESS_TOKEN=

# === LOGGING AND NOTIFICATIONS ===
# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: logs/auto-sync.log)
LOG_FILE=logs/auto-sync.log

# Enable email notifications (default: false)
ENABLE_EMAIL_NOTIFICATIONS=false

# Email recipient for notifications
NOTIFICATION_EMAIL=

# === ADVANCED CONFIGURATION ===
# Custom commit message template
COMMIT_MESSAGE_TEMPLATE=Auto-sync: {timestamp} - {changes_count} files changed

# Pre-sync command to run (e.g., "npm run build")
PRE_SYNC_COMMAND=

# Post-sync command to run
POST_SYNC_COMMAND=

# Enable backup before sync (default: true)
ENABLE_BACKUP=true

# Backup directory (default: backups/)
BACKUP_DIR=backups/

# === DEVELOPMENT ENVIRONMENT ===
# Enable development mode (more verbose logging)
DEV_MODE=false

# Skip SSL verification (not recommended for production)
SKIP_SSL_VERIFY=false

# === CI/CD ENVIRONMENT ===
# CI/CD mode (disables interactive prompts)
CI_MODE=false

# CI/CD build number
BUILD_NUMBER=

# CI/CD job URL
JOB_URL=