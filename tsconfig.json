{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest", "react", "react-dom", "@playwright/test"]
  },
  "include": ["**/*.{ts,tsx,js,jsx}", "**/*.d.ts"],
  "exclude": ["dist", "build", "node_modules", "lighthouse", "coverage"]
}
