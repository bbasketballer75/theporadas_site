{
  "functions": {
    "source": "functions",
    "runtime": "python312",
    "timeoutSeconds": 540,
    "memory": "1GB",
    "maxInstances": 10,
    "environmentVariables": {
      "PYTHONPATH": "/workspace/functions"
    }
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
