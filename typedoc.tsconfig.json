{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest", "react", "react-dom", "@playwright/test"]
  },
  "include": ["src/services/api.ts", "src/hooks/useApi.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage", "test"]
}
