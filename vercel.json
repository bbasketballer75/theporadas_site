{
  "trailingSlash": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(self)" },
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; font-src 'self' data:; connect-src 'self' https://wedding-functions-956393407443.us-central1.run.app https://firestore.googleapis.com https://firebase.googleapis.com; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests; report-uri /api/csp-report"
        },
        {
          "key": "Content-Security-Policy-Report-Only",
          "value": "default-src 'self'; report-uri /api/csp-report"
        },
        {
          "key": "Trusted-Types-Report-Only",
          "value": "default"
        },
        {
          "key": "Report-To",
          "value": "{\"group\":\"csp-endpoint\",\"max_age\":10886400,\"endpoints\":[{\"url\":\"/api/csp-report\"}]}"
        },
        {
          "key": "Reporting-Endpoints",
          "value": "csp-endpoint=\u0022/api/csp-report\u0022"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/assets/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|gif)",
      "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
    }
  ]
}
