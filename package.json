{
  "name": "theporadas-site",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --cache --cache-location .eslintcache --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --cache --cache-location .eslintcache --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "dev": "vite",
    "images:generate": "node scripts/generate_responsive_images.mjs",
    "build": "npm run images:generate && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage && node scripts/fix_coverage_a11y.mjs",
    "coverage:aggregate": "node scripts/aggregate_coverage.mjs",
    "coverage:badge": "node scripts/generate_coverage_badge.mjs",
    "coverage:diff": "node scripts/coverage_diff.mjs",
    "verify:visual": "npx playwright test || echo Skipping visual tests (Playwright not installed or failing)",
    "lighthouse": "node scripts/lighthouse.mjs",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.json",
    "lighthouse:snapshot": "npm run lighthouse:ci && node scripts/lhci_snapshot.mjs",
    "lighthouse:diff": "node scripts/lhci_diff.mjs",
    "validate:video": "node scripts/validate_video.mjs",
    "lint:md": "markdownlint \"**/*.md\" --ignore lighthouse --ignore lighthouse/** --ignore docs/video/** -c .markdownlint.jsonc && markdownlint \"docs/video/**/*.md\" -c docs/video/.markdownlint.jsonc",
    "lh:build": "cd lighthouse && yarn build-devtools",
    "lh:build:full": "cd lighthouse && cross-env LH_DISABLE_ZLIB_SHIMS=1 yarn build-devtools",
    "lh:compare": "node scripts/compare_lighthouse_bundles.mjs",
    "lh:verify-bundles": "node scripts/compare_lighthouse_bundles.mjs",
    "verify": "npm run lint && npm run typecheck && npm run csp:verify && npm run test",
    "preflight": "node scripts/preflight.mjs",
    "changelog:unreleased": "conventional-changelog -p angular -u -o CHANGELOG.md",
    "changelog:release": "conventional-changelog -p angular -r 0 -o CHANGELOG.md && git add CHANGELOG.md",
    "changelog:print": "conventional-changelog -p angular -r 0",
    "prepare": "husky install",
    "db:up": "docker compose up -d mssql",
    "db:down": "docker compose down -v",
    "db:seed": "node --loader ts-node/esm scripts/db/seed.ts",
    "test:a11y:best": "cross-env A11Y_INCLUDE_BEST_PRACTICES=1 A11Y_BEST_OUTPUT=1 vitest run test/KeyboardNav.a11y.test.tsx test/accessibility.test.tsx",
    "a11y:best:enforce": "node scripts/axe_best_enforce.mjs",
    "mcp:fs": "node scripts/mcp_filesystem.mjs",
    "mcp:notion": "node scripts/mcp_notion.mjs",
    "mcp:tavily": "node scripts/mcp_tavily.mjs",
    "mcp:mem0": "node scripts/mcp_mem0.mjs",
    "mcp:sql": "node scripts/mcp_sqlserver.mjs",
    "mcp:playwright": "node scripts/mcp_playwright.mjs",
    "mcp:puppeteer": "node scripts/mcp_puppeteer.mjs",
    "mcp:python": "node scripts/mcp_python.mjs",
    "mcp:memory-bank": "node scripts/mcp_memory_bank.mjs",
    "mcp:kg": "node scripts/mcp_kg_memory.mjs",
    "mcp:smoke": "node scripts/mcp_smoke_test.mjs",
    "analyze:quality": "node scripts/analyze_quality_history.mjs",
    "quality:regression-check": "node scripts/quality_regression_check.mjs",
    "lqip": "node scripts/generate_lqip.mjs",
    "security:code-scanning:app-fetch": "node scripts/code_scanning_app_fetch.mjs",
    "codeql:drift": "node scripts/codeql_drift_delta.mjs",
    "verify:workflows": "node scripts/verify_workflows.mjs",
    "csp:audit": "node scripts/audit_csp_inlines.mjs",
    "csp:verify": "node scripts/verify_csp_diff.mjs",
    "db:test": "node scripts/db/test_connection.mjs",
    "db:test:env": "node -r dotenv/config scripts/db/test_connection.mjs",
    "env:docs": "node scripts/generate_env_docs.mjs",
    "env:docs:check": "node scripts/generate_env_docs.mjs --check",
    "search:build:content": "node --loader ts-node/esm src/search/content_index.ts",
    "search:build:code": "node --loader ts-node/esm src/search/code_index.ts",
    "search:build:all": "npm run search:build:content && npm run search:build:code",
    "search:query": "node --loader ts-node/esm src/search/retrieval.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@lhci/cli": "^0.15.1",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "axe-core": "^4.10.0",
    "chrome-launcher": "^1.1.0",
    "conventional-changelog-cli": "^4.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jimp": "^1.6.0",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^15.2.10",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.0.0",
    "vitest-axe": "^0.1.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "@octokit/auth-app": "^7.1.2",
    "@octokit/core": "^6.1.2",
    "@tavily/core": "^0.5.11",
    "mssql": "^11.0.1",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "playwright": "*",
    "puppeteer": "*"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    },
    "puppeteer": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --cache-location .eslintcache",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "tmp": "^0.2.4"
  }
}
