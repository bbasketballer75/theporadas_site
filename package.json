{
  "name": "theporadas_site",
  "version": "1.0.0",
  "description": "Poradas family wedding site",
  "main": "index.js",
  "scripts": {
    "start": "next start",
    "dev": "next dev --turbo",
    "build": "npm run build --workspaces",
    "watch": "npm run watch --workspaces",
    "start:mcp": "npm run start:mcp:fast",
    "start:mcp:fast": "powershell -ExecutionPolicy Bypass -Command \"$env:SKIP_LOCAL_BUILD='true'; & './scripts/start-all-mcp.ps1'\"",
    "start:mcp:local": "powershell -ExecutionPolicy Bypass -Command \"$env:SKIP_LOCAL_BUILD='false'; & './scripts/start-all-mcp.ps1'\"",
    "stop:mcp": "powershell -ExecutionPolicy Bypass -File ./scripts/stop-mcp.ps1",
    "stop:mcp:force": "powershell -ExecutionPolicy Bypass -File ./scripts/stop-mcp.ps1 -Force",
    "stop:mcp:kill-ports": "npx kill-port 3001 3002 || true",
    "monitor:mcp": "powershell -ExecutionPolicy Bypass -File ./scripts/monitor-mcp.ps1",
    "show:mcp:progress": "powershell -ExecutionPolicy Bypass -File ./scripts/show-mcp-progress.ps1",
    "monitor:mcp:watch": "powershell -ExecutionPolicy Bypass -File ./scripts/monitor-mcp.ps1 -Watch",
    "publish-all": "npm publish --workspaces --access public",
    "link-all": "npm link --workspaces",
    "lint": "next lint --max-warnings 0",
    "optimize-images": "node ./scripts/optimize-images.js",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --runInBand --coverage",
    "test:watch": "jest --watch",
    "test:pages": "jest __tests__/pages.index.test.jsx --passWithNoTests",
    "apply-branch-protection": "powershell -ExecutionPolicy Bypass -File ./scripts/apply-branch-protection.ps1",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,html,json,md,mdx}\""
  },
  "dependencies": {
    "@canva/cli": "^1.2.0",
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/diff": "^7.0.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^24.5.2",
    "jest": "^29.6.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "jest-axe": "^7.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.0",
    "@semantic-release/commit-analyzer": "^9.0.0",
    "@semantic-release/release-notes-generator": "^11.0.0",
    "@semantic-release/npm": "^10.0.0",
    "semantic-release-monorepo": "^7.0.0"
  }
}
