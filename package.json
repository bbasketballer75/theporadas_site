{
  "name": "theporadas-site",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --cache --cache-location .eslintcache --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --cache --cache-location .eslintcache --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:aggregate": "node scripts/aggregate_coverage.mjs",
    "coverage:badge": "node scripts/generate_coverage_badge.mjs",
    "lighthouse": "node scripts/lighthouse.mjs",
    "validate:video": "node scripts/validate_video.mjs",
    "lint:md": "markdownlint '**/*.md' -c .markdownlint.jsonc",
    "lh:build": "cd lighthouse && yarn build-devtools",
    "lh:build:full": "cd lighthouse && cross-env LH_DISABLE_ZLIB_SHIMS=1 yarn build-devtools",
    "lh:compare": "node scripts/compare_lighthouse_bundles.mjs",
    "lh:verify-bundles": "node scripts/compare_lighthouse_bundles.mjs",
    "verify": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "axe-core": "^4.10.0",
    "chrome-launcher": "^1.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^15.2.10",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^7.1.3",
    "vitest": "^3.0.0",
    "vitest-axe": "^0.1.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --cache-location .eslintcache",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=10.0.0"
  }
}
