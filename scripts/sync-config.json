{
  "version": "1.0.0",
  "description": "Configuration file for auto-sync scripts",

  "environments": {
    "development": {
      "description": "Development environment configuration",
      "syncIntervalMinutes": 30,
      "dryRun": true,
      "forcePush": false,
      "requireApproval": false,
      "maxCommitsPerHour": 20,
      "logLevel": "DEBUG"
    },
    "staging": {
      "description": "Staging environment configuration",
      "syncIntervalMinutes": 60,
      "dryRun": false,
      "forcePush": false,
      "requireApproval": true,
      "maxCommitsPerHour": 12,
      "logLevel": "INFO"
    },
    "production": {
      "description": "Production environment configuration",
      "syncIntervalMinutes": 120,
      "dryRun": false,
      "forcePush": false,
      "requireApproval": true,
      "maxCommitsPerHour": 6,
      "logLevel": "WARN"
    }
  },

  "filePatterns": {
    "include": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "**/*.md",
      "**/*.css",
      "**/*.scss",
      "**/*.html"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/*.log",
      "**/*.tmp",
      "**/.env*",
      "**/secrets/**",
      "**/*.key",
      "**/*.pem"
    ],
    "critical": ["package.json", "package-lock.json", "yarn.lock", ".gitignore", "README.md"]
  },

  "commitTemplates": {
    "default": "Auto-sync: Update {count} files",
    "feature": "Auto-sync: Feature updates - {count} files",
    "bugfix": "Auto-sync: Bug fixes - {count} files",
    "docs": "Auto-sync: Documentation updates - {count} files",
    "config": "Auto-sync: Configuration changes - {count} files",
    "large": "Auto-sync: Large update ({size}MB) - {count} files"
  },

  "safetyLimits": {
    "maxFileSizeMB": 100,
    "maxFilesPerCommit": 50,
    "maxCommitsPerHour": 12,
    "maxCommitsPerDay": 100,
    "requireApprovalThreshold": {
      "files": 20,
      "sizeMB": 10
    }
  },

  "scheduling": {
    "defaultSchedule": {
      "startHour": 9,
      "endHour": 17,
      "timezone": "America/New_York"
    },
    "maintenanceWindows": [
      {
        "name": "Weekend Maintenance",
        "days": ["saturday", "sunday"],
        "startHour": 2,
        "endHour": 4
      }
    ]
  },

  "notifications": {
    "email": {
      "enabled": false,
      "recipients": [],
      "smtp": {
        "host": "",
        "port": 587,
        "secure": false,
        "auth": {
          "user": "",
          "pass": ""
        }
      }
    },
    "slack": {
      "enabled": false,
      "webhookUrl": "",
      "channel": "#auto-sync"
    },
    "discord": {
      "enabled": false,
      "webhookUrl": "",
      "username": "Auto-Sync Bot"
    }
  },

  "logging": {
    "directory": "logs",
    "filename": "auto-sync.log",
    "maxSize": "10m",
    "maxFiles": 5,
    "format": "json",
    "compress": true
  },

  "backup": {
    "enabled": true,
    "directory": "backups",
    "retentionDays": 30,
    "compress": true,
    "includeConfig": false
  },

  "hooks": {
    "preSync": [],
    "postSync": [],
    "onError": [],
    "onApprovalRequired": []
  },

  "integrations": {
    "github": {
      "enabled": false,
      "token": "",
      "repository": "",
      "createPRs": false,
      "autoMerge": false
    },
    "gitlab": {
      "enabled": false,
      "token": "",
      "projectId": "",
      "createMRs": false
    }
  },

  "monitoring": {
    "enabled": true,
    "metrics": {
      "commitsPerHour": true,
      "syncDuration": true,
      "errorRate": true,
      "fileChanges": true
    },
    "alerts": {
      "onFailure": true,
      "onLargeChanges": true,
      "onRateLimit": true
    }
  }
}
